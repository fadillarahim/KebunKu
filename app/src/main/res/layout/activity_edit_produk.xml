            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TxtEditUkuran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Berat Produk"
                style="@style/h2"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/addProdukInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TxtEditStok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Stok Produk"
                style="@style/h2"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/addProdukInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TxtEditHarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Harga Produk"
                style="@style/h2"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/addProdukInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TxtEditDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Deskripsi Produk"
                style="@style/h2"/>

        </com.google.android.material.textfield.TextInputLayout>



